<Window
    x:Class="ColorsControlPanel.CustomMessageBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ColorsControlPanel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MessageBox"
    Width="300"
    Height="200"
    Icon="/Source/Logo.png"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid Background="#2C2F36">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid
            x:Name="ToolBarGrid"
            Grid.Row="0"
            Background="#232529"
            MouseDown="ToolBarGrid_MouseDown">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button x:Name="CloseBtn" Style="{StaticResource ButtonToolBar}">
                    <Image Source="/Source/ToolBar/Close.png" Style="{StaticResource ImageToolBar}">
                        <Image.Effect>
                            <BlurEffect Radius="0.2" />
                        </Image.Effect>
                    </Image>
                </Button>
            </StackPanel>

            <StackPanel
                Margin="5"
                HorizontalAlignment="Left"
                Orientation="Horizontal">
                <Image
                    Width="20"
                    Height="20"
                    Source="/Source/Logo.png" />
                <TextBlock
                    Margin="5"
                    VerticalAlignment="Center"
                    FontWeight="Medium"
                    Foreground="White"
                    Text="ColorPanelControl"
                    TextAlignment="Center" />
            </StackPanel>
        </Grid>

        <TextBlock
            Name="MessageContainer"
            Grid.Row="1"
            Margin="10"
            VerticalAlignment="Center"
            Foreground="White"
            TextAlignment="Center"
            TextWrapping="WrapWithOverflow" />
        <StackPanel
            Name="ButtonContainer"
            Grid.Row="2"
            Margin="10"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#202227" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="HorizontalAlignment" Value="Center" />
                    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                    <Setter Property="MinHeight" Value="25" />
                    <Setter Property="MinWidth" Value="75" />
                    <Setter Property="Margin" Value="10,0,0,0" />

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#0F1012" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="Opacity" Value="0.8" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Resources>
        </StackPanel>
    </Grid>
</Window>
