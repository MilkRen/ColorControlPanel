<Window
    x:Class="ColorsControlPanel.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ColorsControlPanel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="Main"
    Width="600"
    Height="450"
    Icon="/Source/Logo.png"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border Background="#2C2F36">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid
                x:Name="ToolBarGrid"
                Grid.Row="0"
                Background="#232529"
                MouseDown="ToolBarGrid_MouseDown">
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button x:Name="MinimizeBtn" Style="{StaticResource ButtonToolBar}">
                        <Image Source="/Source/ToolBar/Minimize.png" Style="{StaticResource ImageToolBar}">
                            <Image.Effect>
                                <BlurEffect Radius="0.2" />
                            </Image.Effect>
                        </Image>
                    </Button>
                    <Button x:Name="CloseBtn" Style="{StaticResource ButtonToolBar}">
                        <Image Source="/Source/ToolBar/Close.png" Style="{StaticResource ImageToolBar}">
                            <Image.Effect>
                                <BlurEffect Radius="0.2" />
                            </Image.Effect>
                        </Image>
                    </Button>
                </StackPanel>

                <StackPanel
                    Margin="5"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
                    <Image
                        Width="20"
                        Height="20"
                        Source="/Source/Logo.png" />
                    <TextBlock
                        Margin="5"
                        VerticalAlignment="Center"
                        FontWeight="Medium"
                        Foreground="White"
                        Text="ColorPanelControl"
                        TextAlignment="Center" />
                </StackPanel>
            </Grid>

            <Grid x:Name="MainGrid" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>

                <Grid
                    x:Name="ColorSettings"
                    Grid.Column="0"
                    Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="290" />
                        <RowDefinition Height="120" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <xctk:ColorCanvas
                        x:Name="MainColorCanvas"
                        Grid.Row="0"
                        Background="#17181C"
                        BorderBrush="White"
                        BorderThickness="1"
                        Foreground="White"
                        PreviewMouseMove="MainColorCanvas_PreviewMouseMove"
                        UsingAlphaChannel="False" />
                    <!--  TextBox Grid.Row="0" Background="Transparent" Foreground="White" BorderThickness="0" Margin="109,134,84,134" VerticalAlignment="Center"/  -->
                    <TextBox
                        x:Name="InputRGBTB"
                        Margin="109,134,87,134"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Foreground="#f3f1f1" />
                    <TextBlock
                        Margin="109,134,87,134"
                        VerticalAlignment="Center"
                        FontSize="16"
                        IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=InputRGBTB}" Value="">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <Grid x:Name="MainBtnGrid" Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50" />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <StackPanel
                            Grid.Row="0"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <Button x:Name="HilightBtn" Style="{StaticResource ButtonColors}">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle
                                        x:Name="HilightColorRectangle"
                                        Width="15"
                                        Height="15"
                                        Margin="0,0,5,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Fill="White"
                                        Stroke="White"
                                        StrokeThickness="1" />
                                    <TextBlock Text="Hilight" />
                                </StackPanel>
                            </Button>
                            <Button x:Name="HotTrackingColorBtn" Style="{StaticResource ButtonColors}">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle
                                        x:Name="HotTrackingColorRectangle"
                                        Width="15"
                                        Height="15"
                                        Margin="0,0,5,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Fill="White"
                                        Stroke="White"
                                        StrokeThickness="1" />
                                    <TextBlock Text="HotTrackingColor" />
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <StackPanel
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <Button
                                x:Name="SaveChangeColorBtn"
                                VerticalAlignment="Bottom"
                                Content="Save change Hilight/HotTrackingColor"
                                Style="{StaticResource ButtonSamples}" />
                        </StackPanel>

                        <StackPanel
                            Grid.Row="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Button
                                x:Name="DefaultChangeColorBtn"
                                VerticalAlignment="Bottom"
                                Content="Default change Hilight/HotTrackingColor"
                                Style="{StaticResource ButtonSamples}" />
                        </StackPanel>
                    </Grid>
                </Grid>

                <Grid
                    x:Name="ScreenView"
                    Grid.Column="1"
                    Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="290" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Border
                        Background="Transparent"
                        BorderBrush="White"
                        BorderThickness="1" />
                    <Image
                        x:Name="ScreenImg"
                        Grid.Row="0"
                        Margin="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Source="/Source/Samples/Screen.png" />

                    <Grid
                        x:Name="ScreenDesktop"
                        Grid.Row="0"
                        Margin="50,19,0,43"
                        RenderTransformOrigin="0.491,0.564">
                        <Polygon
                            x:Name="HilightPolygon"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Fill="Transparent"
                            Opacity="1"
                            Points="0,8,0,190,190,190,190,8"
                            Stroke="#0078D7"
                            StrokeThickness="1" />
                        <Polygon
                            x:Name="HotTrackingColorPolygon"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Fill="#0078D7"
                            Opacity="0.3"
                            Points="0,8,0,190,190,190,190,8"
                            Stroke="#0066CC"
                            StrokeThickness="0" />
                        <Image
                            Width="10"
                            Height="10"
                            Margin="23,210,207,8"
                            Source="/Source/Other/Cursor.png" />
                    </Grid>

                    <Grid x:Name="ScreenBtnGrid" Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="45" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Separator
                            Grid.Row="0"
                            Height="2"
                            Margin="5"
                            VerticalAlignment="Top"
                            Background="White" />
                        <TextBlock
                            Grid.Row="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="15"
                            FontWeight="Medium"
                            Foreground="White"
                            Text="Screens"
                            TextDecorations="Underline" />

                        <StackPanel
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Orientation="Horizontal">
                            <Button
                                x:Name="BackScreenBtn"
                                VerticalAlignment="Bottom"
                                Style="{StaticResource ButtonScreen}">
                                <Image Source="/Source/Other/Back.png" Style="{StaticResource ImageScreen}">
                                    <Image.Effect>
                                        <BlurEffect Radius="0.1" />
                                    </Image.Effect>
                                </Image>
                            </Button>
                            <Button
                                x:Name="NextScreenBtn"
                                VerticalAlignment="Bottom"
                                Style="{StaticResource ButtonScreen}">
                                <Image Source="/Source/Other/Next.png" Style="{StaticResource ImageScreen}">
                                    <Image.Effect>
                                        <BlurEffect Radius="0.1" />
                                    </Image.Effect>
                                </Image>
                            </Button>
                        </StackPanel>

                        <TextBlock
                            x:Name="NameVersionTB"
                            Grid.Row="2"
                            Margin="5"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            FontSize="8"
                            Foreground="White"
                            Opacity="0.3"
                            Text="Version 0.1" />
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
